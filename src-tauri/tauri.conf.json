{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "CFA_MC_Entry_v0.1",
  "version": "0.3.0",
  "identifier": "com.cfa.masterclerk.entry",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "CFA_MC_Entry_v0.1",
        "width": 1280,
        "height": 800,
        "minWidth": 1280,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "devtools": true,
        "maximized": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: blob:; font-src 'self' data:; connect-src 'self' ws: wss:;"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
